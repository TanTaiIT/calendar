{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types/**/*"],
  "exclude": ["src/**/__tests__/*"],
  
  "compilerOptions": {
    "skipLibCheck" : true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "bootstrap-vue-3": ["node_modules/bootstrap-vue-3/dist/BootstrapVue.d.ts"]
    },
    "noImplicitAny": true,
    "allowJs": true,
  },
}
